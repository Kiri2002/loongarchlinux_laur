pkgname=wine6.0
pkgver=6.0.1
pkgrel=2
pkgdesc="A compatibility layer for running Windows programs"
arch=('x86_64' 'loong64')
url="https://wiki.winehq.org/Mono"
license=('GPL' 'LGPL2.1' 'MPL')
depends=('lat' 'lat-runtime-i386')
optdepends=('lat-runtime-x86_64')
source=(https://pkg.loongnix.cn/loongnix/pool/main/w/wine/wine_${pkgver}-7-g0216b230c459.lnd.2_loongarch64.deb)
sha256sums=('ca7011e5620c427a365248648da6bfc5a04e9d329d363f2ddbaab03091ed69a1')
options=(!strip)

package() {
  tar xf data.tar.xz

  mkdir -p ${pkgdir}/opt/wine-6.0
  mkdir -p ${pkgdir}/usr/bin
  for i in bin include lib share; do
      cp -r opt/wine-6.0/$i ${pkgdir}/opt/wine-6.0
  done

#  for i in msidb msiexec notepad regedit regsvr32 \
#           widl wine wineboot winebuild winecfg \
#           wineconsole winecpp winedbg winedump winefile \
#           wine winegcc winemaker winemine winepath win \
#           wineserver wmc wrc; do
#    ln -sf /opt/wine-6.0/bin/$i ${pkgdir}/usr/bin/$i
#  done
}
